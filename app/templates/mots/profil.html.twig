{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid page-body-wrapper">
        <div class="content-wrapper container">
            <div class="row">
                    <div class="card">
                        <div class="card-body">
                            <h2> Modifier mes informations </h2>
                            <div class="text-center my-2">
                            {% if app.user %}
                                {% if app.user.avatar %}
                                    <img src="{{ asset('uploads/' ~ app.user.avatar) }}" alt="Avatar" style="width: 300px; height: 300px; border-radius: 50%; border: 1px solid #000000"/>
                                {% else %}
                                    <img src="{{ asset('uploads/avatarbasique_1.png') }}" alt="image!" style="width: 300px; height: 300px; border-radius: 50%; border: 1px solid #000000"/>
                                {% endif %}
                            {% else %}
                                <p>Utilisateur non connectÃ©</p>
                            {% endif %}
                            </div>
                            {{ form_start(form) }}
                            <div class='mb-2'>
                                {{ form_widget(form) }}
                                
                            </div> 
                            <button class='btn btn-secondary px-5' type="submit">Enregistrer les modifications</button> 
                            {{ form_end(form) }}
                        </div>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}