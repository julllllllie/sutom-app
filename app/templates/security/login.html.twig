{% extends 'base.html.twig' %}

{% block title %}Connexion {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <form method="post" class="bg-white p-4 rounded shadow-sm border border-warning">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté avec {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">SE déconnecter</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
                    <div class="mb-3">
                        <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" placeholder="Pseudo" class="form-control border border-warning" autocomplete="username" required autofocus>
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control border border-warning" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-lg btn-warning btn-block" type="submit">
                        Sign in
                    </button>
                </form>
             <p class="mt-3">Pas encore inscrit? <a href="{{ path('app_register') }}">S'inscrire!</a></p>
            </div>
        </div>
    </div>
{% endblock %}
